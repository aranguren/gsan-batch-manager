<div class="form-group">
  <%= label_tag "Agendamento", nil, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <div class='input-group date datetimepicker'>
      <%= text_field_tag :agendamento, '', :'data-format' => "dd/MM/yyyy hh:mm:ss", placeholder: "dd/mm/aaaa hh:mm:ss (Opcional)", class: "form-control" %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('.datetimepicker').datetimepicker({
    language: 'pt-BR'
  });
</script>
